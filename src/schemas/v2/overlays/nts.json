{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://trust.propdata.org.uk/schemas/v2/overlays/nts.json",
  "required": [
    "propertyPack"
  ],
  "properties": {
    "propertyPack": {
      "required": [
        "materialFacts"
      ],
      "properties": {
        "materialFacts": {
          "required": [
            "ownership",
            "councilTax",
            "energyEfficiency"
          ],
          "properties": {
            "priceInformation": {
              "ntsRef": "A3",
              "title": "Price information",
              "required": [
                "price",
                "priceQualifier"
              ],
              "properties": {
                "price": {
                  "ntsRef": "A3.1",
                  "title": "Price"
                },
                "priceQualifier": {
                  "ntsRef": "A3.2",
                  "title": "Price type",
                  "enum": [
                    "POA",
                    "Guide price",
                    "Fixed price",
                    "Offers in excess of",
                    "Offers in region of",
                    "Sale by tender"
                  ]
                }
              }
            },
            "ownership": {
              "ntsRef": "A1.1",
              "title": "Ownership",
              "required": [
                "ownershipsToBeTransferred"
              ],
              "properties": {
                "ownershipsToBeTransferred": {
                  "items": {
                    "required": [
                      "ownershipType"
                    ],
                    "oneOf": [
                      null,
                      null,
                      {
                        "properties": {
                          "leaseholdInformation": {
                            "properties": {
                              "typeOfLeasehold": {
                                "oneOf": [
                                  null,
                                  {
                                    "required": [
                                      "sharedOwnershipPercentage",
                                      "sharedOwnershipRent",
                                      "sharedOwnershipRentFrequency"
                                    ],
                                    "properties": {
                                      "sharedOwnershipPercentage": {
                                        "ntsRef": "A1.7.1",
                                        "title": "Shared ownership percentage"
                                      },
                                      "sharedOwnershipRent": {
                                        "ntsRef": "A1.7.2",
                                        "title": "Shared ownership rent (£)"
                                      },
                                      "sharedOwnershipRentFrequency": {
                                        "ntsRef": "A1.7.3",
                                        "title": "Shared ownership rent frequency",
                                        "enum": [
                                          "Yearly",
                                          "Monthly",
                                          "Weekly"
                                        ]
                                      }
                                    }
                                  }
                                ]
                              },
                              "leaseTerm": {
                                "required": [
                                  "startYearOfLease",
                                  "lengthOfLeaseInYears"
                                ],
                                "properties": {
                                  "startYearOfLease": {
                                    "ntsRef": "A1.2",
                                    "title": "Year that the lease commenced"
                                  },
                                  "lengthOfLeaseInYears": {
                                    "ntsRef": "A1.3",
                                    "title": "Length of lease (years)"
                                  }
                                }
                              },
                              "groundRent": {
                                "ntsRef": "A1.4",
                                "title": "Ground Rent",
                                "discriminator": {
                                  "propertyName": "isGroundRentPayable"
                                },
                                "oneOf": [
                                  {
                                    "properties": {
                                      "isGroundRentPayable": {
                                        "enum": [
                                          "No"
                                        ]
                                      }
                                    }
                                  },
                                  {
                                    "properties": {
                                      "isGroundRentPayable": {
                                        "enum": [
                                          "Yes"
                                        ]
                                      },
                                      "annualGroundRent": {
                                        "ntsRef": "A1.4.2",
                                        "title": "What is the annual ground rent payable? (£)"
                                      },
                                      "rentSubjectToIncrease": {
                                        "ntsRef": "A1.4.3",
                                        "title": "Is the ground rent subject to increase?",
                                        "discriminator": {
                                          "propertyName": "yesNo"
                                        },
                                        "oneOf": [
                                          {
                                            "properties": {
                                              "yesNo": {
                                                "enum": [
                                                  "No"
                                                ]
                                              }
                                            }
                                          },
                                          {
                                            "properties": {
                                              "yesNo": {
                                                "enum": [
                                                  "Yes"
                                                ]
                                              },
                                              "rentReviewFrequency": {
                                                "ntsRef": "1.4.3.2",
                                                "title": "How often is the rent reviewed?"
                                              },
                                              "rentIncreaseCalculated": {
                                                "ntsRef": "1.4.3.3",
                                                "title": "How is the increase calculated?",
                                                "description": "e.g. set figure, doubling, in line with Retail Price Index, Consumer Price Index, etc"
                                              }
                                            },
                                            "required": [
                                              "rentReviewFrequency",
                                              "rentIncreaseCalculated"
                                            ]
                                          }
                                        ],
                                        "required": [
                                          "yesNo"
                                        ],
                                        "properties": {
                                          "yesNo": {
                                            "ntsRef": "1.4.3.1",
                                            "enum": [
                                              "Yes",
                                              "No"
                                            ]
                                          }
                                        }
                                      }
                                    }
                                  }
                                ],
                                "required": [
                                  "isGroundRentPayable"
                                ],
                                "properties": {
                                  "isGroundRentPayable": {
                                    "ntsRef": "A1.4.1",
                                    "title": "Does the seller pay ground rent for the property?",
                                    "enum": [
                                      "Yes",
                                      "No"
                                    ]
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            "energyEfficiency": {
              "required": [
                "certificate"
              ],
              "properties": {
                "certificate": {
                  "required": [
                    "currentEnergyRating"
                  ]
                }
              }
            },
            "councilTax": {
              "ntsRef": "A2",
              "title": "Council Tax",
              "required": [
                "councilTaxBand"
              ],
              "properties": {
                "councilTaxBand": {
                  "ntsRef": "A2.1",
                  "title": "Which Council Tax band does this property fall within?",
                  "description": "Band I relates to Wales only",
                  "enum": [
                    "A",
                    "B",
                    "C",
                    "D",
                    "E",
                    "F",
                    "G",
                    "H",
                    "I"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}